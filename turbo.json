{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "coverage/**"]
		},
		"test": {
			"dependsOn": ["^test"],
			"outputs": ["dist/**", "coverage/**"]
		},
		"test:watch": {
			"persistent": true,
			"cache": false
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"check-types": {
			"dependsOn": ["^check-types"],
			"outputs": ["dist/**", "coverage/**"]
		}
	}
}
